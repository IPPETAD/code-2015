<link rel="stylesheet" href="/css/gsdk-base.css" charset="utf-8">
<div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" data-bind="value: conf().title"></input>
</div>
<div class="form-group">
    <label for="topic">Topic</label>
    <input class="form-control" data-bind="value: conf().topic"></input>
</div>
<div class="form-group">
    <label for="time">Time</label>
    <input class="form-control" data-bind="value: conf().time"></input>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" data-bind="value: conf().description"></textarea>
</div>
<div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" data-bind="value: conf().body"></textarea>
</div>
<div class="form-group">
    <label for="image">Image URL</label>
    <input class="form-control" data-bind="value: conf().image"></input>
</div>
<div class="form-group">
    <label for="tags">Tags</label>
    <input class="form-control" class="form-control" data-bind="value: conf().tags"></input>
</div>
<div class="form-group">
    <label for="venue">Venue</label>
    <input class="form-control" data-bind="value: conf().venue"></input>
</div>
<div class="form-group">
    <label for="itinerary">Itinerary</label>
    <input class="form-control" data-bind="value: conf().itinerary"></input>
</div>

<button class="btn btn-default" data-bind="click: save">Submit</button>

<div class="wizard-container" style="position: static !important;">
    <div class="card wizard-card ct-wizard-blue" id="wizard">

    <!--        You can switch "ct-wizard-orange"  with one of the next bright colors: "ct-wizard-blue", "ct-wizard-green", "ct-wizard-orange", "ct-wizard-red"             -->

            <div class="wizard-header">
                <h3>
                   PLAN YOUR CONFERENCE
                   <small>It'll be the best. Ever.</small>
                </h3>
            </div>
            <ul>
                <li class="industry"><a href="#industry" data-toggle="tab">Industry</a></li>
                <li class="location"><a href="#location" data-toggle="tab">Location</a></li>
                <li class="venue"><a href="#venue" data-toggle="tab">Venue</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="industry">
                  <div class="row">
                      <h4 class="info-text"> Let's start with your target industry.</h4>
                      <div class="col-sm-10 col-sm-offset-1">
                          <div class="form-group">
                            <label for="industry">Industry</label>
                            <select class="form-control" data-bind="options: industries, value: industry"></select>
                          </div>
                      </div>
                  </div>
                </div>
                <div class="tab-pane" id="location">
                    <h4 class="info-text"> Here are the biggest markets. </h4>
                    <p style="text-align: center">We recommend hosting in <span data-bind="text: maxCity"></span></p>
                    <div class="map" id="map-industry">

                    </div>
                    <br />
                    <select class="form-control" data-bind="options: provinces, optionsText: cities_list, optionsValue: cities_list, value: city">

                    </select>
                </div>
                <div class="tab-pane" id="venue">
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="info-text">Here are some convention centres</h4>
                        </div>
                    </div>
                    <div class="map" id="map-venues"></div>
                    <p data-bind="visible: conf().venue().name">Your current venue is <span data-bind="text: conf().venue().name"></p>
                </div>
            </div>
            <div class="wizard-footer">
                    <div class="pull-right">
                        <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Next' />
                        <input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finish' />

                    </div>
                    <div class="pull-left">
                        <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                    </div>
                    <div class="clearfix"></div>
            </div>
    </div>
    </form>
</div>
